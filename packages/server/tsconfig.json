{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["es6"],
    "target": "es2021",
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": ".",
    "typeRoots": [
      "../../node_modules/@types",
      "./src/@types"
    ],
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@config/*": ["./src/config/*"],
      "@modules/*": ["./src/modules/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["./src/**/*"]
}
