{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": ".",
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "../../node_modules/@types",
      "./src/@types"
    ],
    "paths": {
      "@config/*": ["./src/config/*"]
    }
  },
  "include": ["src/**/*"]
}
