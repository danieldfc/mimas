{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "module-resolver", {
        "alias": {
          "@config": "./src/config",
          "@modules": "./src/modules",
          "@shared": "./src/shared"
        }
      }
    ],
    "babel-plugin-transform-typescript-metadata",
    "@babel/plugin-transform-typescript",
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose": false }]
  ],
  "ignore": ["**/*.spec.ts"]
}
