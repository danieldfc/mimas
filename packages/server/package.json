{
  "name": "@mimas/server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/shared/infra/http/server.js",
    "dev": "npx tsnd -r tsconfig-paths/register --inspect --respawn --exit-child --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts",
    "typeorm": "npx tsnd -r tsconfig-paths/register ../../node_modules/typeorm/cli.js",
    "migration:create": "yarn typeorm migration:create -n",
    "migration:run": "yarn typeorm migration:run",
    "migration:undo": "yarn typeorm migration:revert",
    "seed:config": "npx tsnd -r tsconfig-paths/register ../../node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "npx tsnd -r tsconfig-paths/register ../../node_modules/typeorm-seeding/dist/cli.js seed",
    "schema:drop": "npx tsnd -r tsconfig-paths/register ../../node_modules/typeorm/cli.js schema:drop",
    "schema:sync": "npx tsnd -r tsconfig-paths/register ../../node_modules/typeorm/cli.js schema:sync",
    "test": "cross-env NODE_ENV=test npx jest --no-cache",
    "test:dev": "cross-env NODE_ENV=test npx jest --no-cache --watchAll",
    "test:coverage": "cross-env NODE_ENV=test npx jest --no-cache --coverage",
    "vercel-build": "yarn build && yarn typeorm migration:run && yarn seed:run",
    "prepare": "yarn build"
  },
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.1",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "node-cron": "^3.0.2",
    "node-fetch": "^3.3.0",
    "nodemailer": "^6.8.0",
    "pg": "^8.7.3",
    "pino": "^7.9.2",
    "pino-pretty": "^7.6.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0",
    "typeorm": "^0.2.32",
    "typeorm-seeding": "^1.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.8",
    "@babel/plugin-transform-typescript": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^6.6.9",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node-cron": "^3.0.7",
    "@types/nodemailer": "^6.4.7",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "cross-env": "^7.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "tsx": "^3.12.2"
  }
}
